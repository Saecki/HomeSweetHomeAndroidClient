<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors !-->
        <item name="colorSurface">@color/background</item>
        <item name="colorPrimarySurface">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="backgroundColor">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorPrimaryDark">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>

        <item name="colorGridLine">@color/grid_line</item>

        <item name="android:statusBarColor">@color/background_elevated</item>
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>

        <!-- Custom Styles and Themes !-->
        <item name="appBarLayoutStyle">@style/AppbarLayout</item>
        <item name="navigationViewStyle">@style/NavigationView</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>

        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>

        <item name="shapeAppearanceSmallComponent">@style/Theme.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/Theme.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/Theme.App.LargeComponent</item>
    </style>

    <!-- Custom Widget Styles !-->
    <style name="AppbarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:backgroundTint">@color/background_elevated</item>
    </style>

    <style name="NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:backgroundTint">@color/background_elevated</item>
        <item name="itemBackground">@drawable/drawer_item_background</item>
        <item name="itemIconTint">?android:colorForeground</item>
        <item name="itemTextColor">?android:colorForeground</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/background_elevated</item>
    </style>

    <!-- Custom Component Themes !-->
    <style name="Theme.App.SmallComponent">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Theme.App.MediumComponent">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Theme.App.LargeComponent">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Splash Screen Theme !-->
    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/background_elevated</item>
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>
    </style>

</resources>
