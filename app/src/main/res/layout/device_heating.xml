<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/icon_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginEnd="@dimen/icon_margin"
        android:layout_marginBottom="@dimen/icon_margin"
        android:src="@drawable/ic_heating_black_24dp"
        android:tint="?colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/first_guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/device_start_guide_line_margin"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/actual_temp"
        app:layout_constraintEnd_toStartOf="@id/name"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/first_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actual_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/target_temp"
        app:layout_constraintStart_toEndOf="@id/first_guideline"
        app:layout_constraintTop_toBottomOf="@id/room" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/device_end_guide_line_margin"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/room"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/target_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/actual_temp"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/control_icon_padding"
        android:src="@drawable/ic_expand_more_black_24dp"
        android:tint="?colorOnBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/detailed_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="detailed_view_target_temp,plus,minus" />

    <TextView
        android:id="@+id/detailed_view_target_temp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/text_margin"
        android:gravity="center_vertical"
        android:textColor="?colorSecondary"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/end_guideline"
        app:layout_constraintStart_toEndOf="@id/first_guideline"
        app:layout_constraintTop_toBottomOf="@id/actual_temp" />

    <ImageView
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="@dimen/control_icon_padding"
        android:src="@drawable/ic_remove_black_24dp"
        android:tint="?colorOnBackground"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/detailed_view_target_temp"
        app:layout_constraintEnd_toStartOf="@id/plus"
        app:layout_constraintTop_toTopOf="@id/detailed_view_target_temp" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:padding="@dimen/control_icon_padding"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="?colorOnBackground"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/detailed_view_target_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/detailed_view_target_temp" />

</androidx.constraintlayout.widget.ConstraintLayout>