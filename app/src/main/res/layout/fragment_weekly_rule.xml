            <include
                android:id="@+id/horizontal_line_10"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_11"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_9" />

            <include
                android:id="@+id/horizontal_line_11"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_12"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_10" />

            <include
                android:id="@+id/horizontal_line_12"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_13"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_11" />

            <include
                android:id="@+id/horizontal_line_13"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_14"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_12" />

            <include
                android:id="@+id/horizontal_line_14"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_15"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_13" />

            <include
                android:id="@+id/horizontal_line_15"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_16"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_14" />

            <include
                android:id="@+id/horizontal_line_16"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_17"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line_15" />

            <include
                android:id="@+id/horizontal_line_17"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_18"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
