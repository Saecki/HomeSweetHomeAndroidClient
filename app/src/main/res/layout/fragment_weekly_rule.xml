                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/vertical_line_4"
                layout="@layout/weekly_rule_vertical_line"
                android:layout_width="@dimen/separator_line_width"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/vertical_line_3"
                app:layout_constraintRight_toLeftOf="@id/vertical_line_5"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/vertical_line_5"
                layout="@layout/weekly_rule_vertical_line"
                android:layout_width="@dimen/separator_line_width"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/vertical_line_4"
                app:layout_constraintRight_toLeftOf="@id/vertical_line_6"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/vertical_line_6"
                layout="@layout/weekly_rule_vertical_line"
                android:layout_width="@dimen/separator_line_width"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/vertical_line_5"
                app:layout_constraintRight_toLeftOf="@id/vertical_line_7"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/vertical_line_7"
                layout="@layout/weekly_rule_vertical_line"
                android:layout_width="@dimen/separator_line_width"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/vertical_line_6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteY="490dp" />

            <!-- horizontal lines !-->

            <include
                android:id="@+id/horizontal_line_1"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_2"
                app:layout_constraintLeft_toRightOf="@id/time_line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/time_line"
                app:layout_constraintVertical_chainStyle="spread" />

            <include
                android:id="@+id/horizontal_line_2"
                layout="@layout/weekly_rule_horizontal_line"
                android:layout_width="0dp"
                android:layout_height="@dimen/separator_line_width"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line_3"
                app:layout_constraintLeft_toRightOf="@id/time_line"
