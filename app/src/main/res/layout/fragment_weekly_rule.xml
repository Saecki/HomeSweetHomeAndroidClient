                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/weekly_rule_quarter_hour_height"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/weekly_rule_half_hour_height" />

                <include
                    android:id="@+id/time_1"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_2"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_3"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_4"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_5"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_6"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_7"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_8"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_9"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_10"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_11"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_12"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_13"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_14"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_15"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_16"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_17"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_18"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_19"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_20"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_21"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_22"
                    layout="@layout/weekly_rule_time" />

                <include
                    android:id="@+id/time_23"
                    layout="@layout/weekly_rule_time" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/weekly_rule_half_hour_height" />

            </LinearLayout>

            <Space
                android:id="@+id/time_line_space"
                android:layout_width="@dimen/weekly_rule_grid_margin"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="@id/time_line"
                app:layout_constraintLeft_toRightOf="@+id/time_line"
                app:layout_constraintTop_toTopOf="@id/time_line" />

            <include
                android:id="@+id/vertical_line_0"
                layout="@layout/weekly_rule_vertical_line"
                android:layout_width="@dimen/separator_line_width"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintLeft_toRightOf="@id/time_line_space"
                app:layout_constraintRight_toLeftOf="@+id/vertical_line_1"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/vertical_line_1"
                layout="@layout/weekly_rule_vertical_line"
                android:layout_width="@dimen/separator_line_width"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/vertical_line_0"
                app:layout_constraintRight_toLeftOf="@id/vertical_line_2"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/vertical_line_2"
                layout="@layout/weekly_rule_vertical_line"
                android:layout_width="@dimen/separator_line_width"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
